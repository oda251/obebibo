<div class="max-w-7xl mx-auto">
  <div class="flex justify-between items-center mb-8">
    <h1 class="text-3xl font-bold">応募管理</h1>
  </div>

  <!-- Filter Tabs -->
  <div class="mb-6">
    <div class="border-b border-gray-200">
      <nav class="-mb-px flex space-x-8">
        <%= link_to "すべて", admin_entries_path, 
            class: "whitespace-nowrap py-2 px-1 border-b-2 font-medium text-sm #{params[:status].blank? ? 'border-blue-500 text-blue-600' : 'border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300'}" %>
        <%= link_to "応募中", admin_entries_path(status: 'applied'), 
            class: "whitespace-nowrap py-2 px-1 border-b-2 font-medium text-sm #{params[:status] == 'applied' ? 'border-blue-500 text-blue-600' : 'border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300'}" %>
        <%= link_to "承認済み", admin_entries_path(status: 'approved'), 
            class: "whitespace-nowrap py-2 px-1 border-b-2 font-medium text-sm #{params[:status] == 'approved' ? 'border-blue-500 text-blue-600' : 'border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300'}" %>
        <%= link_to "却下済み", admin_entries_path(status: 'rejected'), 
            class: "whitespace-nowrap py-2 px-1 border-b-2 font-medium text-sm #{params[:status] == 'rejected' ? 'border-blue-500 text-blue-600' : 'border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300'}" %>
      </nav>
    </div>
  </div>

  <!-- Entries Table -->
  <div class="bg-white rounded-lg shadow-md overflow-hidden">
    <% if @entries.any? %>
      <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
          <tr>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">応募者</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">案件</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">ステータス</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">応募日</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">アクション</th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
          <% @entries.each do |entry| %>
            <tr class="hover:bg-gray-50">
              <td class="px-6 py-4 whitespace-nowrap">
                <div>
                  <div class="text-sm font-medium text-gray-900"><%= entry.user.email %></div>
                </div>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <div class="text-sm text-gray-900"><%= entry.campaign.title %></div>
                <div class="text-sm text-gray-500"><%= entry.campaign.company.name if entry.campaign.company %></div>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <span class="text-sm font-medium px-2 py-1 rounded">
                  <%= entry.status %>
                </span>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                <%= entry.created_at.strftime('%Y/%m/%d %H:%M') %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                <%= link_to "詳細", admin_entry_path(entry), class: "text-blue-600 hover:text-blue-900" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>

      <!-- Pagination -->
      <% if @entries.respond_to?(:current_page) %>
        <div class="bg-white px-4 py-3 flex items-center justify-between border-t border-gray-200 sm:px-6">
          <%= paginate @entries, param_name: :page %>
        </div>
      <% end %>
    <% else %>
      <div class="text-center py-12">
        <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v10a2 2 0 002 2h8a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"></path>
        </svg>
        <h3 class="mt-2 text-sm font-medium text-gray-900">応募がありません</h3>
        <p class="mt-1 text-sm text-gray-500">応募が送信されると、ここに表示されます。</p>
      </div>
    <% end %>
  </div>
</div>