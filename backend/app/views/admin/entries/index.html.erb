<div class="container mx-auto px-4 py-8">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-3xl font-bold text-gray-800">応募管理</h1>
  </div>

  <div class="mb-6">
    <div class="flex space-x-4">
      <%= link_to '全て', admin_entries_path, 
                  class: "px-4 py-2 rounded #{params[:status].blank? ? 'bg-blue-500 text-white' : 'bg-gray-200 text-gray-700'}" %>
      <%= link_to '審査中', admin_entries_path(status: 'pending'), 
                  class: "px-4 py-2 rounded #{params[:status] == 'pending' ? 'bg-blue-500 text-white' : 'bg-gray-200 text-gray-700'}" %>
      <%= link_to '当選', admin_entries_path(status: 'winner'), 
                  class: "px-4 py-2 rounded #{params[:status] == 'winner' ? 'bg-blue-500 text-white' : 'bg-gray-200 text-gray-700'}" %>
      <%= link_to '落選', admin_entries_path(status: 'loser'), 
                  class: "px-4 py-2 rounded #{params[:status] == 'loser' ? 'bg-blue-500 text-white' : 'bg-gray-200 text-gray-700'}" %>
      <%= link_to '発送済み', admin_entries_path(status: 'shipped'), 
                  class: "px-4 py-2 rounded #{params[:status] == 'shipped' ? 'bg-blue-500 text-white' : 'bg-gray-200 text-gray-700'}" %>
    </div>
  </div>

  <div class="bg-white shadow-lg rounded-lg overflow-hidden">
    <table class="min-w-full divide-y divide-gray-200">
      <thead class="bg-gray-50">
        <tr>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">ユーザー</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">キャンペーン</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">応募日時</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">ステータス</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">操作</th>
        </tr>
      </thead>
      <tbody class="bg-white divide-y divide-gray-200">
        <% @entries.each do |entry| %>
          <tr>
            <td class="px-6 py-4 whitespace-nowrap">
              <div class="text-sm font-medium text-gray-900">ユーザー#<%= entry.user.id %></div>
              <div class="text-sm text-gray-500"><%= entry.user.email %></div>
            </td>
            <td class="px-6 py-4 whitespace-nowrap">
              <div class="text-sm font-medium text-gray-900"><%= entry.campaign.title %></div>
              <div class="text-sm text-gray-500"><%= entry.campaign.company.name %></div>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
              <%= entry.created_at.strftime('%Y/%m/%d %H:%M') %>
            </td>
            <td class="px-6 py-4 whitespace-nowrap">
              <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full 
                <%= case entry.status
                    when 'pending' then 'bg-yellow-100 text-yellow-800'
                    when 'winner' then 'bg-green-100 text-green-800'
                    when 'loser' then 'bg-red-100 text-red-800'
                    when 'shipped' then 'bg-blue-100 text-blue-800'
                    when 'completed' then 'bg-purple-100 text-purple-800'
                    end %>">
                <%= case entry.status
                    when 'pending' then '審査中'
                    when 'winner' then '当選'
                    when 'loser' then '落選'
                    when 'shipped' then '発送済み'
                    when 'completed' then '完了'
                    end %>
              </span>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
              <%= link_to '詳細', admin_entry_path(entry), class: 'text-indigo-600 hover:text-indigo-900 mr-3' %>
              <% if entry.status == 'pending' %>
                <%= form_with url: admin_entry_path(entry), method: :patch, local: true, class: 'inline mr-2' do |form| %>
                  <%= form.hidden_field :status, value: 'winner' %>
                  <%= form.submit '当選', class: 'text-green-600 hover:text-green-900 bg-green-50 hover:bg-green-100 px-2 py-1 rounded text-xs' %>
                <% end %>
                <%= form_with url: admin_entry_path(entry), method: :patch, local: true, class: 'inline' do |form| %>
                  <%= form.hidden_field :status, value: 'loser' %>
                  <%= form.submit '落選', class: 'text-red-600 hover:text-red-900 bg-red-50 hover:bg-red-100 px-2 py-1 rounded text-xs' %>
                <% end %>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <div class="mt-6">
    <%= paginate @entries if respond_to?(:paginate) %>
  </div>
</div>