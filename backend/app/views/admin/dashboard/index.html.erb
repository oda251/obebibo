<div class="max-w-6xl mx-auto">
  <h1 class="text-3xl font-bold mb-8">管理ダッシュボード</h1>
  
  <!-- Statistics Cards -->
  <div class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-8">
    <div class="bg-white rounded-lg shadow-md p-6">
      <div class="flex items-center">
        <div class="p-3 bg-blue-100 rounded-full">
          <svg class="w-8 h-8 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9.5a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z"></path>
          </svg>
        </div>
        <div class="ml-4">
          <p class="text-2xl font-bold text-gray-900"><%= @campaigns_count %></p>
          <p class="text-gray-600">総案件数</p>
        </div>
      </div>
    </div>
    
    <div class="bg-white rounded-lg shadow-md p-6">
      <div class="flex items-center">
        <div class="p-3 bg-green-100 rounded-full">
          <svg class="w-8 h-8 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
        </div>
        <div class="ml-4">
          <p class="text-2xl font-bold text-gray-900"><%= @active_campaigns_count %></p>
          <p class="text-gray-600">募集中案件</p>
        </div>
      </div>
    </div>
    
    <div class="bg-white rounded-lg shadow-md p-6">
      <div class="flex items-center">
        <div class="p-3 bg-yellow-100 rounded-full">
          <svg class="w-8 h-8 text-yellow-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197m13.5-9a2.5 2.5 0 11-5 0 2.5 2.5 0 015 0z"></path>
          </svg>
        </div>
        <div class="ml-4">
          <p class="text-2xl font-bold text-gray-900"><%= @entries_count %></p>
          <p class="text-gray-600">総応募数</p>
        </div>
      </div>
    </div>
    
    <div class="bg-white rounded-lg shadow-md p-6">
      <div class="flex items-center">
        <div class="p-3 bg-purple-100 rounded-full">
          <svg class="w-8 h-8 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 8h10M7 12h4m1 8l-4-4H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-3l-4 4z"></path>
          </svg>
        </div>
        <div class="ml-4">
          <p class="text-2xl font-bold text-gray-900"><%= @reviews_count %></p>
          <p class="text-gray-600">総レビュー数</p>
        </div>
      </div>
    </div>
  </div>

  <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
    <!-- Recent Entries -->
    <div class="bg-white rounded-lg shadow-md">
      <div class="p-6 border-b border-gray-200">
        <h2 class="text-xl font-bold">最近の応募</h2>
      </div>
      <div class="p-6">
        <% if @recent_entries.any? %>
          <div class="space-y-4">
            <% @recent_entries.each do |entry| %>
              <div class="flex items-center justify-between p-3 bg-gray-50 rounded">
                <div>
                  <p class="font-medium"><%= entry.user.name %></p>
                  <p class="text-sm text-gray-600"><%= entry.campaign.title %></p>
                  <p class="text-xs text-gray-500"><%= entry.created_at.strftime('%Y/%m/%d %H:%M') %></p>
                </div>
                <span class="<%= entry_status_class(entry.status) %> text-sm font-medium">
                  <%= entry_status_text(entry.status) %>
                </span>
              </div>
            <% end %>
          </div>
          <div class="mt-4 text-center">
            <%= link_to "応募管理へ", admin_entries_path, class: "text-blue-600 hover:underline" %>
          </div>
        <% else %>
          <p class="text-gray-500 text-center py-4">応募がありません</p>
        <% end %>
      </div>
    </div>

    <!-- Recent Reviews -->
    <div class="bg-white rounded-lg shadow-md">
      <div class="p-6 border-b border-gray-200">
        <h2 class="text-xl font-bold">最近のレビュー</h2>
      </div>
      <div class="p-6">
        <% if @recent_reviews.any? %>
          <div class="space-y-4">
            <% @recent_reviews.each do |review| %>
              <div class="p-3 bg-gray-50 rounded">
                <div class="flex items-center justify-between mb-2">
                  <p class="font-medium"><%= review.user.name %></p>
                  <span class="text-yellow-500"><%= format_rating_stars(review.rating) %></span>
                </div>
                <p class="text-sm text-gray-600 mb-1"><%= review.campaign.title %></p>
                <p class="text-sm text-gray-700"><%= truncate(review.comment, length: 80) %></p>
                <p class="text-xs text-gray-500 mt-1"><%= review.created_at.strftime('%Y/%m/%d %H:%M') %></p>
              </div>
            <% end %>
          </div>
          <div class="mt-4 text-center">
            <%= link_to "レビュー管理へ", admin_reviews_path, class: "text-blue-600 hover:underline" %>
          </div>
        <% else %>
          <p class="text-gray-500 text-center py-4">レビューがありません</p>
        <% end %>
      </div>
    </div>
  </div>

  <!-- Quick Actions -->
  <div class="mt-8 bg-white rounded-lg shadow-md p-6">
    <h2 class="text-xl font-bold mb-4">クイックアクション</h2>
    <div class="grid grid-cols-1 md:grid-cols-4 gap-4">
      <%= link_to admin_campaigns_path, class: "p-4 bg-blue-50 rounded-lg hover:bg-blue-100 transition-colors" do %>
        <div class="text-center">
          <svg class="w-8 h-8 text-blue-600 mx-auto mb-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
          </svg>
          <p class="font-medium text-blue-600">新しい案件</p>
        </div>
      <% end %>
      
      <%= link_to admin_entries_path, class: "p-4 bg-green-50 rounded-lg hover:bg-green-100 transition-colors" do %>
        <div class="text-center">
          <svg class="w-8 h-8 text-green-600 mx-auto mb-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v10a2 2 0 002 2h8a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"></path>
          </svg>
          <p class="font-medium text-green-600">応募管理</p>
        </div>
      <% end %>
      
      <%= link_to admin_shipments_path, class: "p-4 bg-purple-50 rounded-lg hover:bg-purple-100 transition-colors" do %>
        <div class="text-center">
          <svg class="w-8 h-8 text-purple-600 mx-auto mb-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4"></path>
          </svg>
          <p class="font-medium text-purple-600">配送管理</p>
        </div>
      <% end %>
      
      <%= link_to admin_reviews_path, class: "p-4 bg-yellow-50 rounded-lg hover:bg-yellow-100 transition-colors" do %>
        <div class="text-center">
          <svg class="w-8 h-8 text-yellow-600 mx-auto mb-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.196-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z"></path>
          </svg>
          <p class="font-medium text-yellow-600">レビュー管理</p>
        </div>
      <% end %>
    </div>
  </div>
</div>