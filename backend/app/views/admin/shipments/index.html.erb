<div class="container mx-auto px-4 py-8">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-3xl font-bold text-gray-800">配送管理</h1>
  </div>

  <div class="mb-6">
    <div class="flex space-x-4">
      <%= link_to '全て', admin_shipments_path, 
                  class: "px-4 py-2 rounded #{params[:status].blank? ? 'bg-blue-500 text-white' : 'bg-gray-200 text-gray-700'}" %>
      <%= link_to '準備中', admin_shipments_path(status: 'preparing'), 
                  class: "px-4 py-2 rounded #{params[:status] == 'preparing' ? 'bg-blue-500 text-white' : 'bg-gray-200 text-gray-700'}" %>
      <%= link_to '発送済み', admin_shipments_path(status: 'shipped'), 
                  class: "px-4 py-2 rounded #{params[:status] == 'shipped' ? 'bg-blue-500 text-white' : 'bg-gray-200 text-gray-700'}" %>
      <%= link_to '配達完了', admin_shipments_path(status: 'delivered'), 
                  class: "px-4 py-2 rounded #{params[:status] == 'delivered' ? 'bg-blue-500 text-white' : 'bg-gray-200 text-gray-700'}" %>
      <%= link_to '配送失敗', admin_shipments_path(status: 'failed'), 
                  class: "px-4 py-2 rounded #{params[:status] == 'failed' ? 'bg-blue-500 text-white' : 'bg-gray-200 text-gray-700'}" %>
    </div>
  </div>

  <div class="bg-white shadow-lg rounded-lg overflow-hidden">
    <table class="min-w-full divide-y divide-gray-200">
      <thead class="bg-gray-50">
        <tr>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">ユーザー</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">キャンペーン</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">配送先</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">ステータス</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">発送日時</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">操作</th>
        </tr>
      </thead>
      <tbody class="bg-white divide-y divide-gray-200">
        <% @shipments.each do |shipment| %>
          <tr>
            <td class="px-6 py-4 whitespace-nowrap">
              <div class="text-sm font-medium text-gray-900">ユーザー#<%= shipment.user.id %></div>
              <div class="text-sm text-gray-500"><%= shipment.user.email %></div>
            </td>
            <td class="px-6 py-4 whitespace-nowrap">
              <div class="text-sm font-medium text-gray-900"><%= shipment.campaign.title %></div>
              <div class="text-sm text-gray-500"><%= shipment.campaign.company.name %></div>
            </td>
            <td class="px-6 py-4 whitespace-nowrap">
              <div class="text-sm text-gray-500">
                <%= shipment.address.prefecture %><%= shipment.address.city %><br>
                <%= shipment.address.address1 %>
              </div>
            </td>
            <td class="px-6 py-4 whitespace-nowrap">
              <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full 
                <%= case shipment.status
                    when 'preparing' then 'bg-yellow-100 text-yellow-800'
                    when 'shipped' then 'bg-blue-100 text-blue-800'
                    when 'delivered' then 'bg-green-100 text-green-800'
                    when 'failed' then 'bg-red-100 text-red-800'
                    end %>">
                <%= case shipment.status
                    when 'preparing' then '準備中'
                    when 'shipped' then '発送済み'
                    when 'delivered' then '配達完了'
                    when 'failed' then '配送失敗'
                    end %>
              </span>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
              <%= shipment.shipped_at&.strftime('%Y/%m/%d %H:%M') || '-' %>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
              <%= link_to '詳細', admin_shipment_path(shipment), class: 'text-indigo-600 hover:text-indigo-900 mr-3' %>
              <% if shipment.status == 'preparing' %>
                <%= form_with url: admin_shipment_path(shipment), method: :patch, local: true, class: 'inline' do |form| %>
                  <%= form.hidden_field :status, value: 'shipped' %>
                  <%= form.hidden_field :shipped_at, value: Time.current %>
                  <%= form.submit '発送', class: 'text-blue-600 hover:text-blue-900 bg-blue-50 hover:bg-blue-100 px-2 py-1 rounded text-xs' %>
                <% end %>
              <% elsif shipment.status == 'shipped' %>
                <%= form_with url: admin_shipment_path(shipment), method: :patch, local: true, class: 'inline' do |form| %>
                  <%= form.hidden_field :status, value: 'delivered' %>
                  <%= form.submit '配達完了', class: 'text-green-600 hover:text-green-900 bg-green-50 hover:bg-green-100 px-2 py-1 rounded text-xs' %>
                <% end %>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <div class="mt-6">
    <%= paginate @shipments if respond_to?(:paginate) %>
  </div>
</div>