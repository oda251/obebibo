<div class="max-w-7xl mx-auto">
  <div class="flex justify-between items-center mb-8">
    <h1 class="text-3xl font-bold">配送管理</h1>
  </div>

  <!-- Filter Tabs -->
  <div class="mb-6">
    <div class="border-b border-gray-200">
      <nav class="-mb-px flex space-x-8">
        <%= link_to "すべて", admin_shipments_path, 
            class: "whitespace-nowrap py-2 px-1 border-b-2 font-medium text-sm #{params[:status].blank? ? 'border-blue-500 text-blue-600' : 'border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300'}" %>
        <%= link_to "準備中", admin_shipments_path(status: 'preparing'), 
            class: "whitespace-nowrap py-2 px-1 border-b-2 font-medium text-sm #{params[:status] == 'preparing' ? 'border-blue-500 text-blue-600' : 'border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300'}" %>
        <%= link_to "発送済み", admin_shipments_path(status: 'shipped'), 
            class: "whitespace-nowrap py-2 px-1 border-b-2 font-medium text-sm #{params[:status] == 'shipped' ? 'border-blue-500 text-blue-600' : 'border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300'}" %>
        <%= link_to "配送完了", admin_shipments_path(status: 'delivered'), 
            class: "whitespace-nowrap py-2 px-1 border-b-2 font-medium text-sm #{params[:status] == 'delivered' ? 'border-blue-500 text-blue-600' : 'border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300'}" %>
      </nav>
    </div>
  </div>

  <!-- Shipments Table -->
  <div class="bg-white rounded-lg shadow-md overflow-hidden">
    <% if @shipments.any? %>
      <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
          <tr>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">ユーザー</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">案件</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">配送先</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">ステータス</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">発送日</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">アクション</th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
          <% @shipments.each do |shipment| %>
            <tr class="hover:bg-gray-50">
              <td class="px-6 py-4 whitespace-nowrap">
                <div>
                  <div class="text-sm font-medium text-gray-900"><%= shipment.entry.user.email %></div>
                </div>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <div class="text-sm text-gray-900"><%= shipment.entry.campaign.title %></div>
                <div class="text-sm text-gray-500"><%= shipment.entry.campaign.company&.name || 'N/A' %></div>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <div class="text-sm text-gray-900">
                  <% if shipment.address %>
                    <%= shipment.address.postal_code %><br>
                    <%= shipment.address.prefecture %><%= shipment.address.city %><%= shipment.address.address %><br>
                    <%= shipment.address.name %>
                  <% else %>
                    配送先情報なし
                  <% end %>
                </div>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <span class="px-2 py-1 text-xs font-medium rounded-full">
                  <%= shipment.status %>
                </span>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                <%= shipment.shipped_at&.strftime('%Y/%m/%d') || 'N/A' %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                <%= link_to "詳細", admin_shipment_path(shipment), class: "text-blue-600 hover:text-blue-900" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>

      <!-- Pagination -->
      <% if @shipments.respond_to?(:current_page) %>
        <div class="bg-white px-4 py-3 flex items-center justify-between border-t border-gray-200 sm:px-6">
          <%= paginate @shipments, param_name: :page %>
        </div>
      <% end %>
    <% else %>
      <div class="text-center py-12">
        <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4"></path>
        </svg>
        <h3 class="mt-2 text-sm font-medium text-gray-900">配送情報がありません</h3>
        <p class="mt-1 text-sm text-gray-500">承認された応募があると、配送情報が表示されます。</p>
      </div>
    <% end %>
  </div>
</div>