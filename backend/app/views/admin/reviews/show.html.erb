<div class="container mx-auto px-4 py-8">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-3xl font-bold text-gray-800">レビュー詳細</h1>
    <%= link_to 'レビュー一覧に戻る', admin_reviews_path, class: 'bg-gray-500 hover:bg-gray-600 text-white font-bold py-2 px-4 rounded' %>
  </div>

  <div class="bg-white shadow-lg rounded-lg p-6">
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      <div>
        <h3 class="text-lg font-semibold text-gray-800 mb-4">レビュー情報</h3>
        
        <div class="mb-4">
          <label class="block text-sm font-medium text-gray-700">評価</label>
          <div class="mt-1 flex items-center">
            <span class="text-2xl font-bold text-yellow-500"><%= @review.rating %></span>
            <div class="ml-3 text-yellow-400 text-xl">
              <% @review.rating.times do %>★<% end %>
              <% (5 - @review.rating).times do %>☆<% end %>
            </div>
            <span class="ml-3 text-sm text-gray-500">(<%= @review.rating_text %>)</span>
          </div>
        </div>

        <div class="mb-4">
          <label class="block text-sm font-medium text-gray-700">投稿日時</label>
          <p class="mt-1 text-sm text-gray-900"><%= @review.created_at.strftime('%Y年%m月%d日 %H:%M') %></p>
        </div>
      </div>

      <div>
        <h3 class="text-lg font-semibold text-gray-800 mb-4">ユーザー情報</h3>
        
        <div class="mb-4">
          <label class="block text-sm font-medium text-gray-700">ユーザー</label>
          <p class="mt-1 text-sm text-gray-900">
            ユーザー#<%= @review.user.id %><br>
            <span class="text-gray-500"><%= @review.user.email %></span>
          </p>
        </div>
      </div>
    </div>

    <div class="mt-6">
      <label class="block text-sm font-medium text-gray-700">コメント</label>
      <div class="mt-1 p-4 bg-gray-50 rounded border">
        <%= simple_format(@review.comment) %>
      </div>
    </div>

    <div class="mt-6 pt-6 border-t border-gray-200">
      <h3 class="text-lg font-semibold text-gray-800 mb-4">キャンペーン情報</h3>
      
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <div>
          <div class="mb-4">
            <label class="block text-sm font-medium text-gray-700">タイトル</label>
            <p class="mt-1 text-sm text-gray-900"><%= @review.campaign.title %></p>
          </div>

          <div class="mb-4">
            <label class="block text-sm font-medium text-gray-700">企業</label>
            <p class="mt-1 text-sm text-gray-900"><%= @review.campaign.company.name %></p>
          </div>
        </div>

        <div>
          <div class="mb-4">
            <label class="block text-sm font-medium text-gray-700">応募期間</label>
            <p class="mt-1 text-sm text-gray-900">
              <%= @review.campaign.start_at.strftime('%Y/%m/%d') %> - 
              <%= @review.campaign.end_at.strftime('%Y/%m/%d') %>
            </p>
          </div>

          <div class="mb-4">
            <label class="block text-sm font-medium text-gray-700">平均評価</label>
            <p class="mt-1 text-sm text-gray-900">
              <%= @review.campaign.average_rating %>
              <span class="text-yellow-400">
                <% @review.campaign.average_rating.to_i.times do %>★<% end %>
                <% (5 - @review.campaign.average_rating.to_i).times do %>☆<% end %>
              </span>
            </p>
          </div>
        </div>
      </div>

      <div class="mt-4">
        <%= link_to 'キャンペーン詳細', admin_campaign_path(@review.campaign), 
                   class: 'bg-blue-500 hover:bg-blue-600 text-white font-bold py-2 px-4 rounded mr-2' %>
        <%= link_to '削除', admin_review_path(@review), method: :delete, 
                   confirm: '本当に削除しますか？', 
                   class: 'bg-red-500 hover:bg-red-600 text-white font-bold py-2 px-4 rounded' %>
      </div>
    </div>
  </div>
</div>