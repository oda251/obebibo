<div class="container mx-auto px-4 py-8">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-3xl font-bold text-gray-800">キャンペーン詳細</h1>
    <div>
      <%= link_to '編集', edit_admin_campaign_path(@campaign), class: 'bg-blue-500 hover:bg-blue-600 text-white font-bold py-2 px-4 rounded mr-2' %>
      <%= link_to '応募者管理', entries_admin_campaign_path(@campaign), class: 'bg-green-500 hover:bg-green-600 text-white font-bold py-2 px-4 rounded mr-2' %>
      <%= link_to '一覧に戻る', admin_campaigns_path, class: 'bg-gray-500 hover:bg-gray-600 text-white font-bold py-2 px-4 rounded' %>
    </div>
  </div>

  <div class="bg-white shadow-lg rounded-lg p-6">
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      <div>
        <h3 class="text-lg font-semibold text-gray-800 mb-4">基本情報</h3>
        
        <div class="mb-4">
          <label class="block text-sm font-medium text-gray-700">タイトル</label>
          <p class="mt-1 text-sm text-gray-900"><%= @campaign.title %></p>
        </div>

        <div class="mb-4">
          <label class="block text-sm font-medium text-gray-700">企業</label>
          <p class="mt-1 text-sm text-gray-900"><%= @campaign.company.name %></p>
        </div>

        <div class="mb-4">
          <label class="block text-sm font-medium text-gray-700">ステータス</label>
          <span class="mt-1 px-2 inline-flex text-xs leading-5 font-semibold rounded-full 
            <%= case @campaign.status
                when 'active' then 'bg-green-100 text-green-800'
                when 'draft' then 'bg-yellow-100 text-yellow-800'
                when 'closed' then 'bg-red-100 text-red-800'
                when 'completed' then 'bg-blue-100 text-blue-800'
                end %>">
            <%= @campaign.status.humanize %>
          </span>
        </div>

        <div class="mb-4">
          <label class="block text-sm font-medium text-gray-700">応募期間</label>
          <p class="mt-1 text-sm text-gray-900">
            <%= @campaign.start_at.strftime('%Y年%m月%d日') %> - 
            <%= @campaign.end_at.strftime('%Y年%m月%d日') %>
          </p>
        </div>
      </div>

      <div>
        <h3 class="text-lg font-semibold text-gray-800 mb-4">統計情報</h3>
        
        <div class="mb-4">
          <label class="block text-sm font-medium text-gray-700">応募数</label>
          <p class="mt-1 text-sm text-gray-900"><%= @campaign.entry_count %>件</p>
        </div>

        <div class="mb-4">
          <label class="block text-sm font-medium text-gray-700">当選者数</label>
          <p class="mt-1 text-sm text-gray-900"><%= @campaign.winner_count %>件</p>
        </div>

        <div class="mb-4">
          <label class="block text-sm font-medium text-gray-700">平均評価</label>
          <p class="mt-1 text-sm text-gray-900">
            <%= @campaign.average_rating %>
            <span class="text-yellow-400">
              <% @campaign.average_rating.to_i.times do %>★<% end %>
              <% (5 - @campaign.average_rating.to_i).times do %>☆<% end %>
            </span>
          </p>
        </div>

        <% if @campaign.image_url.present? %>
          <div class="mb-4">
            <label class="block text-sm font-medium text-gray-700">画像</label>
            <img src="<%= @campaign.image_url %>" alt="<%= @campaign.title %>" class="mt-1 w-32 h-32 object-cover rounded">
          </div>
        <% end %>
      </div>
    </div>

    <div class="mt-6">
      <label class="block text-sm font-medium text-gray-700">説明</label>
      <div class="mt-1 p-4 bg-gray-50 rounded border">
        <%= simple_format(@campaign.description) %>
      </div>
    </div>
  </div>
</div>