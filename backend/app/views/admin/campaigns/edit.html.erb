<div class="container mx-auto px-4 py-8">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-3xl font-bold text-gray-800">キャンペーン編集</h1>
    <%= link_to '詳細に戻る', admin_campaign_path(@campaign), class: 'bg-gray-500 hover:bg-gray-600 text-white font-bold py-2 px-4 rounded' %>
  </div>

  <div class="bg-white shadow-lg rounded-lg p-6">
    <%= form_with model: [:admin, @campaign], local: true, class: 'space-y-6' do |form| %>
      <% if @campaign.errors.any? %>
        <div class="bg-red-50 border border-red-200 rounded-md p-4">
          <div class="flex">
            <div class="flex-shrink-0">
              <svg class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
              </svg>
            </div>
            <div class="ml-3">
              <h3 class="text-sm font-medium text-red-800">
                <%= pluralize(@campaign.errors.count, "個のエラー") %>があります
              </h3>
              <div class="mt-2 text-sm text-red-700">
                <ul class="list-disc pl-5 space-y-1">
                  <% @campaign.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
            </div>
          </div>
        </div>
      <% end %>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <div>
          <div class="mb-4">
            <%= form.label :company_id, '企業', class: 'block text-sm font-medium text-gray-700' %>
            <%= form.select :company_id, options_from_collection_for_select(@companies, :id, :name, @campaign.company_id), 
                           { prompt: '企業を選択してください' }, 
                           { class: 'mt-1 block w-full border border-gray-300 rounded-md px-3 py-2 bg-white focus:outline-none focus:ring-blue-500 focus:border-blue-500' } %>
          </div>

          <div class="mb-4">
            <%= form.label :title, 'タイトル', class: 'block text-sm font-medium text-gray-700' %>
            <%= form.text_field :title, class: 'mt-1 block w-full border border-gray-300 rounded-md px-3 py-2 focus:outline-none focus:ring-blue-500 focus:border-blue-500' %>
          </div>

          <div class="mb-4">
            <%= form.label :image_url, '画像URL', class: 'block text-sm font-medium text-gray-700' %>
            <%= form.url_field :image_url, class: 'mt-1 block w-full border border-gray-300 rounded-md px-3 py-2 focus:outline-none focus:ring-blue-500 focus:border-blue-500' %>
          </div>

          <div class="mb-4">
            <%= form.label :status, 'ステータス', class: 'block text-sm font-medium text-gray-700' %>
            <%= form.select :status, [
                  ['下書き', 'draft'],
                  ['公開中', 'active'],
                  ['終了', 'closed'],
                  ['完了', 'completed']
                ], {}, { class: 'mt-1 block w-full border border-gray-300 rounded-md px-3 py-2 bg-white focus:outline-none focus:ring-blue-500 focus:border-blue-500' } %>
          </div>
        </div>

        <div>
          <div class="mb-4">
            <%= form.label :start_at, '開始日時', class: 'block text-sm font-medium text-gray-700' %>
            <%= form.datetime_local_field :start_at, value: @campaign.start_at&.strftime('%Y-%m-%dT%H:%M'), class: 'mt-1 block w-full border border-gray-300 rounded-md px-3 py-2 focus:outline-none focus:ring-blue-500 focus:border-blue-500' %>
          </div>

          <div class="mb-4">
            <%= form.label :end_at, '終了日時', class: 'block text-sm font-medium text-gray-700' %>
            <%= form.datetime_local_field :end_at, value: @campaign.end_at&.strftime('%Y-%m-%dT%H:%M'), class: 'mt-1 block w-full border border-gray-300 rounded-md px-3 py-2 focus:outline-none focus:ring-blue-500 focus:border-blue-500' %>
          </div>
        </div>
      </div>

      <div class="mb-6">
        <%= form.label :description, '説明', class: 'block text-sm font-medium text-gray-700' %>
        <%= form.text_area :description, rows: 6, class: 'mt-1 block w-full border border-gray-300 rounded-md px-3 py-2 focus:outline-none focus:ring-blue-500 focus:border-blue-500' %>
      </div>

      <div class="flex justify-end space-x-3">
        <%= link_to 'キャンセル', admin_campaign_path(@campaign), class: 'bg-gray-300 hover:bg-gray-400 text-gray-800 font-bold py-2 px-4 rounded' %>
        <%= form.submit '更新', class: 'bg-blue-500 hover:bg-blue-600 text-white font-bold py-2 px-4 rounded' %>
      </div>
    <% end %>
  </div>
</div>