<div class="container mx-auto px-4 py-8">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-3xl font-bold text-gray-800">キャンペーン管理</h1>
    <%= link_to '新規作成', new_admin_campaign_path, class: 'bg-blue-500 hover:bg-blue-600 text-white font-bold py-2 px-4 rounded' %>
  </div>

  <div class="bg-white shadow-lg rounded-lg overflow-hidden">
    <table class="min-w-full divide-y divide-gray-200">
      <thead class="bg-gray-50">
        <tr>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">タイトル</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">企業</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">ステータス</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">応募期間</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">応募数</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">操作</th>
        </tr>
      </thead>
      <tbody class="bg-white divide-y divide-gray-200">
        <% @campaigns.each do |campaign| %>
          <tr>
            <td class="px-6 py-4 whitespace-nowrap">
              <div class="text-sm font-medium text-gray-900"><%= campaign.title %></div>
            </td>
            <td class="px-6 py-4 whitespace-nowrap">
              <div class="text-sm text-gray-500"><%= campaign.company.name %></div>
            </td>
            <td class="px-6 py-4 whitespace-nowrap">
              <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full 
                <%= case campaign.status
                    when 'active' then 'bg-green-100 text-green-800'
                    when 'draft' then 'bg-yellow-100 text-yellow-800'
                    when 'closed' then 'bg-red-100 text-red-800'
                    when 'completed' then 'bg-blue-100 text-blue-800'
                    end %>">
                <%= campaign.status.humanize %>
              </span>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
              <%= campaign.start_at.strftime('%Y/%m/%d') %> - 
              <%= campaign.end_at.strftime('%Y/%m/%d') %>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
              <%= campaign.entry_count %>件
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
              <%= link_to '詳細', admin_campaign_path(campaign), class: 'text-indigo-600 hover:text-indigo-900 mr-3' %>
              <%= link_to '応募者', admin_campaign_entries_path(campaign), class: 'text-green-600 hover:text-green-900 mr-3' %>
              <%= link_to '編集', edit_admin_campaign_path(campaign), class: 'text-blue-600 hover:text-blue-900 mr-3' %>
              <%= link_to '削除', admin_campaign_path(campaign), method: :delete, 
                          confirm: '本当に削除しますか？', 
                          class: 'text-red-600 hover:text-red-900' %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <div class="mt-6">
    <%= paginate @campaigns if respond_to?(:paginate) %>
  </div>
</div>