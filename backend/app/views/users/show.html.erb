<div class="max-w-6xl mx-auto">
  <h1 class="text-3xl font-bold mb-8">マイページ</h1>
  
  <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
    <!-- User Info -->
    <div class="lg:col-span-1">
      <div class="bg-white rounded-lg shadow-md p-6">
        <h2 class="text-xl font-bold mb-4">ユーザー情報</h2>
        <div class="space-y-3">
          <div>
            <p class="text-sm text-gray-600">メールアドレス</p>
            <p class="font-medium"><%= current_user.email %></p>
          </div>
          <div>
            <p class="text-sm text-gray-600">メールアドレス</p>
            <p class="font-medium"><%= current_user.email %></p>
          </div>
          <div>
            <p class="text-sm text-gray-600">登録日</p>
            <p class="font-medium"><%= current_user.created_at.strftime('%Y年%m月%d日') %></p>
          </div>
        </div>
        
        <div class="mt-6 pt-6 border-t">
          <h3 class="font-bold mb-3">統計情報</h3>
          <div class="grid grid-cols-2 gap-3 text-sm">
            <div class="text-center p-3 bg-blue-50 rounded">
              <p class="font-bold text-blue-600"><%= current_user.entries.count %></p>
              <p class="text-gray-600">応募数</p>
            </div>
            <div class="text-center p-3 bg-green-50 rounded">
              <p class="font-bold text-green-600"><%= current_user.entries.where(status: 'winner').count %></p>
              <p class="text-gray-600">当選数</p>
            </div>
          </div>
        </div>
      </div>
    </div>
    
    <!-- Main Content -->
    <div class="lg:col-span-2 space-y-8">
      <!-- Entries Section -->
      <div class="bg-white rounded-lg shadow-md p-6">
        <h2 class="text-xl font-bold mb-6">応募履歴</h2>
        
        <% if @entries.any? %>
          <div class="space-y-4">
            <% @entries.each do |entry| %>
              <div class="border rounded-lg p-4">
                <div class="flex items-start justify-between">
                  <div class="flex-1">
                    <h3 class="font-bold mb-2">
                      <%= link_to entry.campaign.title, campaign_path(entry.campaign), class: "text-blue-600 hover:underline" %>
                    </h3>
                    <div class="flex items-center space-x-4 text-sm text-gray-600 mb-2">
                      <span>応募日: <%= entry.created_at.strftime('%Y/%m/%d') %></span>
                      <span class="<%= entry_status_class(entry.status) %> font-medium">
                        <%= entry_status_text(entry.status) %>
                      </span>
                    </div>
                    <p class="text-gray-600 text-sm"><%= truncate(entry.campaign.description, length: 100) %></p>
                  </div>
                  
                  <% if entry.campaign.image_url.present? %>
                    <img src="<%= entry.campaign.image_url %>" alt="<%= entry.campaign.title %>" class="w-16 h-16 object-cover rounded ml-4">
                  <% end %>
                </div>
                
                <% if entry.can_review? && !entry.has_review? %>
                  <div class="mt-3 pt-3 border-t">
                    <%= link_to "レビューを投稿", campaign_path(entry.campaign), class: "btn btn-primary btn-sm" %>
                  </div>
                <% end %>
              </div>
            <% end %>
          </div>
          
          <% if @entries.respond_to?(:current_page) %>
            <div class="mt-6">
              <%= paginate @entries %>
            </div>
          <% end %>
        <% else %>
          <div class="text-center py-8 text-gray-500">
            <p>まだ応募していません</p>
            <%= link_to "案件を探す", campaigns_path, class: "btn btn-primary mt-4" %>
          </div>
        <% end %>
      </div>

      <!-- Reviews Section -->
      <div class="bg-white rounded-lg shadow-md p-6">
        <h2 class="text-xl font-bold mb-6">投稿したレビュー</h2>
        
        <% if @reviews.any? %>
          <div class="space-y-4">
            <% @reviews.each do |review| %>
              <div class="border rounded-lg p-4">
                <div class="flex items-start justify-between mb-3">
                  <div class="flex-1">
                    <h3 class="font-bold mb-1">
                      <%= link_to review.campaign.title, campaign_path(review.campaign), class: "text-blue-600 hover:underline" %>
                    </h3>
                    <div class="flex items-center space-x-3 text-sm text-gray-600">
                      <span>評価: <%= format_rating_stars(review.rating) %></span>
                      <span>投稿日: <%= review.created_at.strftime('%Y/%m/%d') %></span>
                    </div>
                  </div>
                  
                  <% if review.campaign.image_url.present? %>
                    <img src="<%= review.campaign.image_url %>" alt="<%= review.campaign.title %>" class="w-16 h-16 object-cover rounded ml-4">
                  <% end %>
                </div>
                
                <p class="text-gray-700"><%= review.comment %></p>
              </div>
            <% end %>
          </div>
          
          <% if @reviews.respond_to?(:current_page) %>
            <div class="mt-6">
              <%= paginate @reviews, param_name: :reviews_page %>
            </div>
          <% end %>
        <% else %>
          <div class="text-center py-8 text-gray-500">
            <p>まだレビューを投稿していません</p>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>