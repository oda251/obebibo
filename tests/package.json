{
  "name": "obebibo-e2e-tests",
  "version": "1.0.0",
  "description": "E2E tests for Obebibo application using Playwright",
  "scripts": {
    "test": "playwright test",
    "test:headed": "playwright test --headed",
    "test:debug": "playwright test --debug",
    "test:ui": "playwright test --ui",
    "test:report": "playwright show-report",
    "test:journeys": "playwright test specs/journeys/",
    "test:journey-01": "playwright test specs/journeys/journey-01-user-registration-to-application.spec.js",
    "test:journey-02": "playwright test specs/journeys/journey-02-company-registration-to-campaign.spec.js",
    "test:journey-03": "playwright test specs/journeys/journey-03-admin-login-to-dashboard.spec.js",
    "test:journey-04": "playwright test specs/journeys/journey-04-campaign-discovery-to-application.spec.js",
    "test:journey-05": "playwright test specs/journeys/journey-05-user-review-submission.spec.js",
    "test:journey-06": "playwright test specs/journeys/journey-06-admin-campaign-management.spec.js",
    "test:journey-07": "playwright test specs/journeys/journey-07-admin-shipment-management.spec.js",
    "test:journey-08": "playwright test specs/journeys/journey-08-user-profile-management.spec.js",
    "validate": "node validate-endpoints.js",
    "install-browsers": "playwright install",
    "install-browsers-chromium": "playwright install chromium",
    "pretest": "npm run validate"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0"
  }
}